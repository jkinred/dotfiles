profile laptop {
    output "California Institute of Technology 0x1404 Unknown" mode 1920x1200 position 0,0
    exec ~/.config/waybar/scripts/switch-output.sh laptop
}

profile desktop {
    output "Lenovo Group Limited P27h-30 V30B2WX1" mode 2560x1440 position 0,0
    output "Lenovo Group Limited P27h-30 V30B2WV3" mode 2560x1440 position 2560,0
    output "California Institute of Technology 0x1404 Unknown" mode 1920x1200 position 1601,1440
    exec ~/.config/waybar/scripts/switch-output.sh multi
    exec swaymsg workspace 1, move workspace to output '"Lenovo Group Limited P27h-30 V30B2WX1"'
    exec swaymsg workspace 2, move workspace to output '"Lenovo Group Limited P27h-30 V30B2WX1"'
    exec swaymsg workspace 3, move workspace to output '"Lenovo Group Limited P27h-30 V30B2WX1"'
    exec swaymsg workspace 4, move workspace to output '"Lenovo Group Limited P27h-30 V30B2WV3"'
    exec swaymsg workspace 5, move workspace to output '"California Institute of Technology 0x1404 Unknown"'
}

profile leftonly {
    output "Lenovo Group Limited P27h-30 V30B2WX1" mode 2560x1440 position 0,0
    output "California Institute of Technology 0x1404 Unknown" mode 1920x1200 position 1600,1440
    exec ~/.config/waybar/scripts/switch-output.sh multi
}

profile rightonly {
    output "Lenovo Group Limited P27h-30 V30B2WV3" mode 2560x1440 position 2560,0
    output "California Institute of Technology 0x1404 Unknown" mode 1920x1200 position 1600,1440
    exec ~/.config/waybar/scripts/switch-output.sh multi
}
